<?xml version="1.0" encoding="utf-8"?>
<resources>

 <style name="view_indicator_line">
     <item name="android:layout_width">match_parent</item>
     <item name="android:layout_height">@dimen/indicator_line_height</item>
     <item name="android:background">@color/color_indicator_line</item>
 </style>

    <style name="app_listview_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@null</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:scrollingCache">false</item>
    </style>

    <style name="banner_style">
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="indicator_width">7dp</item>
        <item name="indicator_margin">4dp</item>
        <item name="indicator_height">7dp</item>
    </style>

</resources>
